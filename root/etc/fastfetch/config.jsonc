{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/master/doc/json_schema.json",
  "logo": {
    "type": "auto",
    "source": "arch",
    "padding": {
      "top": 2,
      "left": 3,
      "right": 6
    }
  },
  "display": {
    "separator": " - "
  },
  "modules": [
    "break",
    "title",
    "break",
    "separator",
    "break",
    {
      "type": "os",
      "key": "       OS",
      "format": "{name}"
    },
    {
      "type": "kernel",
      "key": "   Kernel",
      "format": "{sysname} {release}"
    },
    {
      "type": "shell",
      "key": "    Shell",
      "format": "{pretty-name} {version}"
    },
    "break",
    {
      "type": "wm",
      "key": "       WM",
      "format": "{pretty-name} {version}"
    },
    {
      "type": "theme",
      "key": "    Theme",
      "format": "{theme2}"
    },
    {
      "type": "terminalfont",
      "key": "Term-Font",
      "format": "{name} - {size}pt"
    },
    {
      "type": "cpu",
      "key": "      CPU",
      "format": "{name} {cores-logical}-Thread"
    },
    {
      "type": "gpu",
      "key": "      GPU",
      "format": "{name}"
    },
    {
      "type": "memory",
      "key": "   Memory",
      "format": "{used} / {total} - {percentage}"
    },
    "break",
    {
      "type": "localip",
      "key": "    Local",
      "format": "{ipv4}"
    },
    {
      "type": "publicip",
      "key": "   Public",
      "format": "{ip} - {location}"
    },
    "break",
    "separator",
    "break",
    "colors",
    "break",
    "break"
  ]
}
